<Window x:Class="ThmdPlayer.windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThmdPlayer"
        mc:Ignorable="d"
        Title="AboutWindow" Height="450" Width="800" ResizeMode="NoResize" Icon="/resources/icons/ico/themedit.ico" SizeToContent="Width" ShowInTaskbar="False">
    <Grid x:Name="_grid" Background="#FF4C4C4C">
        <Image x:Name="_logoImage" HorizontalAlignment="Left" Height="285" Margin="25,59,0,0" VerticalAlignment="Top" Width="260" Source="/resources/images/ThemeditPlayerLogo.png"/>
        <Image x:Name="_image" HorizontalAlignment="Left" Height="128" Margin="320,10,0,0" VerticalAlignment="Top" Width="128"/>
        <TextBlock x:Name="_infoTextBox" HorizontalAlignment="Left" Margin="320,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Height="414" Width="470" Foreground="White"/>

    </Grid>
</Window>

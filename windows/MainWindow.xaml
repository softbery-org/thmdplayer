        x:Class="ThmdPlayer.windows.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown"
        Closing="OnClosing">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#51000000">
        <!-- Albo standardowa kontrolka Image -->
